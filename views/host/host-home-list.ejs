<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans antialiased leading-relaxed">
    
    <!-- Navbar -->
    <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black/60 p-6 rounded-lg text-white text-center shadow-lg backdrop-blur-sm">
        <h2 class="text-3xl md:text-4xl font-bold drop-shadow">Host home list</h2>
        <p class="text-lg mt-2 font-medium">Explore homes, cabins, and unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-12">
      <h3 class="text-2xl font-bold mb-8 text-rose-600 tracking-tight">Places to stay</h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% registerHome.forEach(home => { %>
          <% if (home) { %> 
            <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden border border-gray-100">
              
              <!-- Wrap image and house info in anchor -->
              <a href="/homes/<%= home._id %>">
                <img
                  src="<%= home.photoUrl %>"
                  alt="<%= home.houseName %>"
                  class="w-full h-48 object-cover transition duration-300 hover:scale-105"
                />
                <div class="p-4 space-y-1">
                  <h4 class="text-lg font-semibold text-gray-900 truncate"><%= home.houseName %></h4>
                  <p class="text-sm text-gray-600">üìç <%= home.location %></p>
                  <p class="text-sm text-gray-600">üí∞ $<%= home.price %> / night</p>
                  <p class="text-sm text-yellow-500">‚≠ê <%= home.rating %> / 5</p>
                </div>
              </a>

              <!-- Action Buttons -->
              <div class="p-4 flex flex-wrap gap-2 border-t border-gray-100 mt-2 pt-4 items-center justify-center">
                
                <button class="bg-rose-500 hover:bg-rose-600 text-white font-medium py-2 px-4 rounded-md transition w-full sm:w-auto">
                  Book
                </button>

                <a href="/host/edit-home/<%= home._id %>?editing=true"
                  class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition w-full sm:w-auto">
                  Edit
                </a>

                <form action="/host/delete-home/<%= home._id.toString() %>" method="POST" 
                      onsubmit="return confirm('Are you sure you want to delete this home?');">
                  <button type="submit"
                    class="bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md transition w-full sm:w-auto">
                    Delete
                  </button>
                </form>

              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-16">
      <div class="max-w-7xl mx-auto p-6 text-center text-gray-500 text-sm">
        ¬© <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
