<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans ">
    <!-- Navbar -->
   <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black bg-opacity-50 p-6 rounded text-white text-center">
        <h2 class="text-3xl md:text-4xl font-semibold">Host home list</h2>
        <p class="text-lg mt-2">Explore homes, cabins, and unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-10">
      <h3 class="text-2xl font-semibold mb-6">Places to stay</h3>

 <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% registerHome.forEach(home => { %>
    <% if (home) { %> 
      <div class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden">
        <!-- Wrap only the image and house name in the anchor -->
        <a href="/homes/<%= home._id %>">
          <img
            src="<%= home.photoUrl %>"
            alt="<%= home.houseName %>"
            class="w-full h-48 object-cover"
          />
          <div class="p-4 space-y-1">
            <h4 class="text-lg font-bold text-gray-900"><%= home.houseName %></h4>
            <p class="text-sm text-gray-600">üìç <%= home.location %></p>
            <p class="text-sm text-gray-600">üí∞ $<%= home.price %> / night</p>
            <p class="text-sm text-yellow-500">‚≠ê <%= home.rating %> / 5</p>
          </div>
        </a>

        <!-- Buttons outside the anchor -->
        <div class="p-4 flex flex-wrap gap-2">
          <!-- Book Button -->
          <button class="bg-rose-500 hover:bg-rose-600 text-white font-semibold py-2 px-4 rounded transition duration-200 shadow">
            Book
          </button>

          <!-- Edit Button -->
          <a href="/host/edit-home/<%= home._id %>?editing=true" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition duration-200 shadow">
            Edit
          </a>

          <!-- Delete Button -->
          <form action="/host/delete-home/<%= home._id.toString() %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this home?');">   
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded transition duration-200 shadow">
              Delete
            </button>
          </form>
          </>
        </div>
      </div>
    <% } %>
  <% }) %>
</div>





    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-10 top-10">
      <div class="max-w-7xl mx-auto p-4 text-center text-gray-500 text-sm ">
        ¬© <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
