<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login – Airbnb</title>
  <link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">

  <!-- Header -->
  <%- include('../partials/header') %>

  <!-- Login Form -->
  <main class="flex-grow flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-white shadow-lg rounded-xl p-8 mt-12">
      <h1 class="text-2xl font-bold text-center text-rose-500 mb-6">Login to Airbnb</h1>

      <form action="/login" method="POST" class="space-y-5">
        <%- include('../partials/errors') %>

        <!-- Username -->
        <div>
          <label for="email" class="block text-sm font-medium mb-1">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= oldInput.email ? oldInput.email : ''%>"
            required
            placeholder="abc@gmail.com"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rose-400 shadow-sm"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-rose-400 shadow-sm"
          />
        </div>

        <!-- Submit -->
        <button
          type="submit"
          class="w-full bg-rose-500 hover:bg-rose-600 text-white font-semibold py-2 px-4 rounded-md transition"
        >
          Login
        </button>

        <!-- Link to Register -->
        <p class="text-sm text-center text-gray-600 mt-4">
          Don't have an account?
          <a href="/signup" class="text-rose-500 hover:underline">Sign up</a>
        </p>
      </form>

    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t mt-10">
    <div class="max-w-7xl mx-auto p-4 text-center text-gray-500 text-sm">
      © <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
    </div>
  </footer>

</body>
</html>
