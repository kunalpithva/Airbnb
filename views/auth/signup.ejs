<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up – Airbnb</title>
  <link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">

  <!-- Header -->
  <%- include('../partials/header') %>

  <!-- Signup Form -->
  <main class="flex-grow flex items-center justify-center px-4">
    <div class="w-full max-w-lg bg-white shadow-xl rounded-2xl p-10 mt-12 border border-gray-100">
      <h1 class="text-3xl font-extrabold text-center text-rose-500 mb-8">Create your Airbnb account</h1>

      <form action="/signup" method="POST" class="space-y-6">
        <%- include('../partials/errors') %>

        <!-- First Name -->
        <div>
          <label for="firstName" class="block text-sm font-semibold mb-2 text-gray-700">First Name</label>
          <input
            type="text"
            id="firstName"
            name="firstName"
            value="<%= oldInput.firstName ? oldInput.firstName : ''%>"
            required
            placeholder="Enter your first name"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition"
          />
        </div>

        <!-- Last Name -->
        <div>
          <label for="lastName" class="block text-sm font-semibold mb-2 text-gray-700">Last Name</label>
          <input
            type="text"
            id="lastName"
            name="lastName"
            value="<%= oldInput.lastName ? oldInput.lastName : ''%>"
            required
            placeholder="Enter your last name"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-semibold mb-2 text-gray-700">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= oldInput.email ? oldInput.email : ''%>"
            required
            placeholder="you@example.com"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-semibold mb-2 text-gray-700">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition"
          />
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmPassword" class="block text-sm font-semibold mb-2 text-gray-700">Confirm Password</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            required
            placeholder="••••••••"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition"
          />
        </div>

        <!-- User Type -->
        <div>
          <label class="block text-sm font-semibold mb-2 text-gray-700">User Type</label>
          <div class="flex items-center gap-6">
            <label class="inline-flex items-center space-x-2 text-sm">
              <input type="radio" name="userType" value="guest" required class="accent-rose-500" />
              <span>Guest</span>
            </label>
            <label class="inline-flex items-center space-x-2 text-sm">
              <input type="radio" name="userType" value="host" required class="accent-rose-500" />
              <span>Host</span>
            </label>
          </div>
        </div>

        <!-- Terms and Conditions -->
        <div class="flex items-start space-x-3">
          <input
            type="checkbox"
            id="terms"
            name="terms"
            class="mt-1 accent-rose-500"
          />
          <label for="terms" class="text-sm leading-tight text-gray-700">
            I agree to the <a href="#" class="text-rose-500 underline hover:text-rose-600">Terms & Conditions</a>
          </label>
        </div>

        <% if (errors && errors.terms) { %>
          <p class="text-red-500 text-sm mt-1"><%= errors.terms %></p>
        <% } %>


        <!-- Submit -->
        <button
          type="submit"
          class="w-full bg-rose-500 hover:bg-rose-600 text-white font-semibold py-3 rounded-lg transition shadow-sm"
        >
          Create Account
        </button>
        <!-- Link to Login -->
        <p class="text-sm text-center text-gray-600 mt-5">
          Already have an account?
          <a href="/login" class="text-rose-500 hover:underline">Login here</a>
        </p>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t mt-12">
    <div class="max-w-7xl mx-auto p-4 text-center text-gray-500 text-sm">
      © <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
    </div>
  </footer>

</body>
</html>
