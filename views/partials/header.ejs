<% const current = typeof currentPage !== 'undefined' ? currentPage : ''; %>

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-4 py-3">
    <!-- Logo -->
    <a href="/" class="text-3xl font-extrabold text-rose-500 tracking-tight">Airbnb</a>

    <!-- Navigation -->
    <nav class="flex items-center gap-4">
      <% if (isLoggedIn) { %>
        <% if (user && user.userType === 'guest') { %>
          <a href="/home-list"
            class="px-4 py-2 rounded-md text-sm font-medium transition 
              <%= current === 'Home' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Home
          </a>
          <a href="/booking"
            class="px-4 py-2 rounded-md text-sm font-medium transition 
              <%= current === 'booking' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Bookings
          </a>
          <a href="/favourites"
            class="px-4 py-2 rounded-md text-sm font-medium transition 
              <%= current === 'favourites' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Favorites
          </a>
        <% } else if (user && user.userType === 'host') { %>
          <a href="/host/host-home-list"
            class="px-4 py-2 rounded-md text-sm font-medium transition 
              <%= current === 'host-home-list' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Host Home
          </a>
          <a href="/host/add-home" 
            class="px-4 py-2 rounded-md text-sm font-medium transition 
              <%= current === '/host/add-home'  ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Add Home
          </a>
        <% } %>
      <% } %>

      <% if (!isLoggedIn) { %>
        <a href="/login">
          <button class="px-4 py-2 text-sm font-semibold border border-rose-500 text-rose-500 rounded-md hover:bg-rose-50 transition">
            Login
          </button>
        </a>
        <a href="/signup">
          <button class="px-4 py-2 text-sm font-semibold bg-rose-500 text-white rounded-md hover:bg-rose-600 transition">
            Sign Up
          </button>
        </a>
      <% } else { %>
        <form action="/logout" method="POST">
          <button class="px-4 py-2 text-sm font-semibold border border-rose-500 text-rose-500 rounded-md hover:bg-rose-100 transition">
            Log Out
          </button>
        </form>
      <% } %>

      <!-- Avatar + Name -->
      <% if (isLoggedIn && user && user.firstName) { %>
        <div class="flex items-center gap-2 pl-4 border-l border-gray-200 ml-2">
          <div class="w-9 h-9 flex items-center justify-center rounded-full bg-blue-500 text-white text-sm font-bold uppercase shadow">
            <%= user.firstName.charAt(0) %>
          </div>
          <span class="text-sm font-medium text-gray-800">
            <%= user.firstName %>
          </span>
        </div>
      <% } %>
    </nav>
  </div>
</header>
