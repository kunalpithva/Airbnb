<% "use strict"; const current = typeof currentPage !== 'undefined' ? currentPage : ''; %>

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto flex flex-wrap justify-between items-center px-4 py-3">
    <!-- Logo -->
    <a href="/" class="text-3xl font-extrabold text-rose-500 tracking-tight hover:text-rose-600 transition">
      Airbnb
    </a>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-button"
      aria-label="Toggle menu"
      aria-expanded="false"
      class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-rose-500 hover:text-rose-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-rose-400"
      type="button"
    >
      <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
        <path
          id="menu-icon"
          class="block"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
        <path
          id="close-icon"
          class="hidden"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>

    <!-- Navigation -->
    <nav
      id="mobile-menu"
      class="hidden w-full md:flex md:items-center md:w-auto md:gap-4 ml-auto mt-4 md:mt-0 transition-all ease-in-out duration-300"
      role="navigation"
      aria-label="Main Navigation"
    >
      <% if (isLoggedIn) { %>
        <% if (user && user.userType === 'guest') { %>
          

          <a href="/home-list"
            class="block md:inline-block px-4 py-2 rounded-md text-sm font-medium transition whitespace-nowrap border-b md:border-none border-gray-200
              <%= current === 'Home' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Home
          </a>
          <a href="/booking"
            class="block md:inline-block px-4 py-2 rounded-md text-sm font-medium transition whitespace-nowrap border-b md:border-none border-gray-200
              <%= current === 'booking' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Bookings
          </a>
          <a href="/favourites"
            class="block md:inline-block px-4 py-2 rounded-md text-sm font-medium transition whitespace-nowrap border-b md:border-none border-gray-200
              <%= current === 'favourites' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Favorites
          </a>
        <% } else if (user && user.userType === 'host') { %>
          <a href="/host/host-home-list"
            class="block md:inline-block px-4 py-2 rounded-md text-sm font-medium transition whitespace-nowrap border-b md:border-none border-gray-200
              <%= current === 'host-home-list' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Host Home
          </a>
          <a href="/host/add-home"
            class="block md:inline-block px-4 py-2 rounded-md text-sm font-medium transition whitespace-nowrap border-b md:border-none border-gray-200
              <%= current === '/host/add-home' ? 'bg-rose-500 text-white' : 'text-gray-700 hover:bg-rose-100 hover:text-rose-600' %>">
            Add Home
          </a>
        <% } %>
      <% } %>

      <% if (!isLoggedIn) { %>
        <a href="/login" class="w-full md:w-auto">
          <button
            class="w-full md:w-auto px-4 py-2 text-sm font-semibold border border-rose-500 text-rose-500 rounded-md hover:bg-rose-50 transition"
          >
            Login
          </button>
        </a>
        <a href="/signup" class="w-full md:w-auto mt-2 md:mt-0 md:ml-2">
          <button
            class="w-full md:w-auto px-4 py-2 text-sm font-semibold bg-rose-500 text-white rounded-md hover:bg-rose-600 transition"
          >
            Sign Up
          </button>
        </a>
      <% } else { %>
        <form action="/logout" method="POST" class="w-full md:w-auto mt-2 md:mt-0 md:ml-2">
          <button
            class="w-full md:w-auto px-4 py-2 text-sm font-semibold border border-rose-500 text-rose-500 rounded-md hover:bg-rose-100 transition"
          >
            Log Out
          </button>
        </form>
      <% } %>

      <!-- Avatar + Name -->
      <% if (isLoggedIn && user) { %>
        <div
          id="avatarToggle"
          class="flex items-center gap-2 pl-4 border-t md:border-t-0 border-gray-200 mt-4 md:mt-0 md:ml-4 cursor-pointer select-none"
        >
          <div
            class="w-9 h-9 flex items-center justify-center rounded-full bg-blue-500 text-white text-sm font-bold uppercase shadow"
          >
            <%= user.firstName ? user.firstName.charAt(0) : '?' %>
          </div>
          <span class="text-sm font-medium text-gray-800">
            <%= user.firstName ? user.firstName : 'User' %>
          </span>
        </div>
      <% } %>
    </nav>
  </div>

  <script>
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', !isExpanded);
      mobileMenu.classList.toggle('hidden');
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    });
  </script>
</header>
