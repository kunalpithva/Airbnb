<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans ">
    <!-- Navbar -->
   <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black bg-opacity-50 p-6 rounded text-white text-center">
        <h2 class="text-3xl md:text-4xl font-semibold">Favorites page</h2>
        <p class="text-lg mt-2">Explore homes, cabins, and unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-10">
      <h3 class="text-2xl font-semibold mb-6">Places to stay</h3>

     <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
 <% favorites.forEach(favorite => { 
     if (!favorite || !favorite.id) return;
%>
  <div class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden">
    <a href="/home/<%= favorite._id || favorite.id %>">
      <img
        src="<%= favorite.photoUrl %>"
        alt="<%= favorite.houseName %>"
        class="w-full h-48 object-cover"
      />
      <div class="p-4 space-y-1">
        <h4 class="text-lg font-bold text-gray-900"><%= favorite.houseName %></h4>
        <p class="text-sm text-gray-600">üìç <%= favorite.location %></p>
        <p class="text-sm text-gray-600">üí∞ $<%= favorite.price %> / night</p>
        <p class="text-sm text-yellow-500">‚≠ê <%= favorite.rating %> / 5</p>
      </div>
    </a>
   <% favorites.forEach(fav => { %>
  <div class="bg-white shadow rounded p-4">
   
    
    <form action="/favourites/delete/<%= fav.id %>" method="POST" class="flex justify-center">
      <button
        type="submit"
        class="items-center  bg-red-500 hover:bg-red-600 text-white text-sm font-semibold py-2 px-4 rounded-lg shadow-md transition duration-200"
      >
        Remove from Favorites
      </button>
    </form>
  </div>
<% }) %>


  </div>
<% }) %>
</div>



    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-10 top-10">
      <div class="max-w-7xl mx-auto p-4 text-center text-gray-500 text-sm ">
        ¬© <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
