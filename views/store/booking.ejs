<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans ">
    <!-- Navbar -->
   <%- include('../partials/header') %> 
    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black bg-opacity-50 p-6 rounded text-white text-center">
        <h2 class="text-3xl md:text-4xl font-semibold">Booking</h2>
        <p class="text-lg mt-2">Explore homes, cabins, and unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-10">
      <h2 class="text-2xl font-bold mb-4">My Bookings</h2>
<% if (bookings.length > 0) { %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% bookings.forEach(booking => { %>
      <div class="bg-white rounded-xl shadow p-4">
        <img src="<%= booking.home.photoUrl %>" alt="<%= booking.home.houseName %>" class="rounded-md h-40 w-full object-cover mb-2">
        <h3 class="text-xl font-semibold"><%= booking.home.houseName %></h3>
        <p class="text-gray-600">📍 <%= booking.home.location %></p>
        <p class="text-gray-700">💰 $<%= booking.home.price %> / night</p>
        <p class="text-sm text-gray-400 mt-1">Booked on: <%= booking.bookedAt.toLocaleDateString() %></p>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p class="text-gray-500">You have not booked any homes yet.</p>
<% } %>


