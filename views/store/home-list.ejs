<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans leading-relaxed">
    <!-- Navbar -->
    <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black/60 p-6 rounded-lg text-white text-center shadow-xl backdrop-blur">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight">Home Page</h2>
        <p class="text-lg mt-2">Explore homes, cabins & unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-12">
      <h3 class="text-3xl font-bold mb-10 text-gray-800">Places to Stay</h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% registerHome.forEach(home => { %>
          <% if (home) { %>
            <div class="bg-white rounded-2xl border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-200 overflow-hidden">
              <a href="/homes/<%= home._id %>">
                <img
                  src="<%= home.photoUrl %>"
                  alt="<%= home.houseName %>"
                  class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
                />
              </a>

              <div class="p-4 space-y-2">
                <h4 class="text-lg font-semibold text-gray-900 truncate"><%= home.houseName %></h4>
                <p class="text-sm text-gray-500">üìç <%= home.location %></p>
                <p class="text-sm text-gray-500">üí∞ $<%= home.price %> / night</p>
                <p class="text-sm text-yellow-500 font-semibold">‚≠ê <%= home.rating %> / 5</p>

                <div class="flex flex-col gap-2 mt-4">
                  <a
                    href="/homes/<%= home._id %>"
                    class="flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg shadow transition"
                  >
                    üîç View Details
                  </a>

                  <%- include('../partials/favourite', { home: home }) %>

                  <% if (isLoggedIn && user.userType !== 'host') { %>
                <a 
                  href="/booking"
                  class="block w-full text-center bg-rose-600 hover:bg-rose-700 text-white font-medium py-2.5 px-4 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 ease-in-out"
                >
                  Book Now
                </a>
              <% } else if (!isLoggedIn) { %>
                <a 
                  href="/login"
                  class="block w-full text-center bg-rose-600 hover:bg-rose-700 text-white font-medium py-2.5 px-4 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 ease-in-out"
                >
                  Book Now
                </a>
              <% } %>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-16">
      <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
        ¬© <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
