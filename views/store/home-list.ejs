<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Airbnb | Home</title>
    <link rel="stylesheet" href="output.css" />
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <!-- Navbar -->
    <%- include('../partials/header') %>

    <!-- Hero Section -->
    <section class="bg-[url('https://source.unsplash.com/1600x500/?travel,vacation')] bg-cover bg-center h-64 flex items-center justify-center">
      <div class="bg-black bg-opacity-50 p-6 rounded-lg text-white text-center shadow-lg">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tight">Home page</h2>
        <p class="text-lg mt-2">Explore homes, cabins, and unique places to stay</p>
      </div>
    </section>

    <!-- Home Listings -->
    <main class="max-w-7xl mx-auto px-4 py-12">
      <h3 class="text-3xl font-semibold mb-8 text-gray-800">Places to stay</h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% registerHome.forEach(home => { %>
          <% if (home) { %>
            <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden border border-gray-100">
              <a href="/homes/<%= home._id %>">
                <img
                  src="<%= home.photoUrl %>"
                  alt="<%= home.houseName %>"
                  class="w-full h-48 object-cover transition duration-300 hover:scale-105"
                />
              </a>

              <div class="p-4 space-y-2">
                <h4 class="text-xl font-semibold text-gray-900 truncate"><%= home.houseName %></h4>
                <p class="text-sm text-gray-600">üìç <%= home.location %></p>
                <p class="text-sm text-gray-600">üí∞ $<%= home.price %> / night</p>
                <p class="text-sm text-yellow-500 font-medium">‚≠ê <%= home.rating %> / 5</p>

                <div class="flex gap-2 mt-4">
                  <a
                    href="/homes/<%= home._id %>"
                    class="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg shadow-md transition duration-200"
                  >
                    View Details
                  </a>
                </div>

                <%- include('../partials/favourite', { home: home }) %>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-16">
      <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
        ¬© <%= new Date().getFullYear() %> Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
